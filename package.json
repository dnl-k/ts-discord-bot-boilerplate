{
  "name": "discord-bot-tpl",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "start": "node --require dotenv/config dist/index.js",
    "watch": "tsc --watch",
    "build": "yarn clean && tsc",
    "clean": "rimraf dist",
    "dev": "nodemon",
    "deploy": "node --require dotenv/config dist/deploy.js"
  },
  "license": "MIT",
  "dependencies": {
    "@discordjs/core": "^1.2.0",
    "body-parser": "^1.20.2",
    "discord.js": "14.15.3",
    "dotenv": "^16.4.1",
    "express": "^4.19.2",
    "helmet": "^7.1.0",
    "http-status": "^1.7.4"
  },
  "devDependencies": {
    "@types/node": "^20.11.16",
    "nodemon": "^3.0.3",
    "rimraf": "^6.0.1",
    "typescript": "^5.5.2",
    "zod": "^3.23.8"
  },
  "nodemonConfig": {
    "ext": "*.ts",
    "exec": "yarn build && yarn start || exit 1"
  }
}
